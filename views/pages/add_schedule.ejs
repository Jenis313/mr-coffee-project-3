<%- include('./../partials/header') %>
    <div class="w-50 m-auto d-flex justify-content-between align-items-center">
        <h1 class="">Add Schedule</h1>
        <a class="btn btn-secondary" href="/schedules">View Schedules</a>
    </div>
    <form class="w-50 m-auto" enctype="application/x-www-form-urlencoded"  action="/schedules/new" method="POST">
        <div class="username form-group">
            <label class="font-weight-bold" for="username">Username</label>
            <input class="form-control" type="text" id="username" name="username">
        </div>
        <div class="day form-group">
            <label class="font-weight-bold" for="day">Day</label>
            <select class="form-control" name="day" id="day">
                <option value="Monday">Monday</option> 
                <option value="Tuesday">Tuesday</option> 
                <option value="Wednesday">Wednesday</option> 
                <option value="Thursday">Thursday</option> 
                <option value="Friday">Friday</option> 
                <option value="Saturday">Saturday</option> 
                <option value="Sunday">Sunday</option> 
                 <!--Loop this for (user array.length -1)  -->
            </select>
        </div>
        <div class="start_time form-group">
            <label class="font-weight-bold" for="start_time">Start Time</label>
            <input class="form-control" type="time" id="start_time" name="start_time">
        </div>
        <div class="end_time form-group">
            <label class="font-weight-bold" for="end_time">End Time</label>
            <input class="form-control" type="time" id="end_time" name="end_time">
        </div>
        <div class="submit form-group">
            <input class="btn btn-block btn-dark" type="submit" id="submit" value="Add">
        </div>
    </form>
<%- include('./../partials/footer') %>