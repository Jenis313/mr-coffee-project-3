<%- include('./../partials/header') %>
<div class="w-75 m-auto d-flex justify-content-between align-items-center">
    <h1 class="">All Schedules</h1>
    <a class="btn btn-secondary" href="schedules/new">Add Schedule</a>
</div>
<table border="1px solid black" class="table m-auto mt-4 w-75">
    <thead class="thead-dark">
        <tr class="m-5">
            <th>Name</th>
            <th>Day</th>
            <th>Start Time</th>
            <th>End time</th>
        </tr>
    </thead>
    <tbody>
        <% for(let schedule of schedules) { %>
        <tr>
                <td><%= schedule.username %></td>
                <td><%= schedule.day %></td>
                <td><%= schedule.start_time %></td>
                <td><%= schedule.end_time %></td>
            </tr>
        <% } %>
    </tbody>
</table>

<%- include('./../partials/footer') %>